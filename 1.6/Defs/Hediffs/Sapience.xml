  <HediffDef ParentName="BS_RobotSapienceBase">
    <defName>BS_RobotNonSapient</defName>
    <label>Non-sapient</label>
    <description>This robot appears sentient, but not fully sapient.</description>
    <stages Inherit="False">
      <li>
        <statFactors>
          <SM_FlirtChance>0</SM_FlirtChance>
          <WorkSpeedGlobal>0.5</WorkSpeedGlobal>
          <GlobalLearningFactor>0.4</GlobalLearningFactor>
          <PsychicSensitivity>0</PsychicSensitivity>
        </statFactors>
        <!-- <disabledWorkTags>
          <li>Intellectual</li>
        </disabledWorkTags> -->
        <disablesNeeds>
          <li>Mood</li>
          <li>Rest</li>
          <li>Beauty</li>
          <li>Outdoors</li>
          <li>Indoors</li>
          <li>Joy</li>
        </disablesNeeds>
      </li>
		</stages>
    
    <modExtensions>
      <li Class="BigAndSmall.PawnExtension">
        <traitIcon>Icons/BS_RobotNonSapient</traitIcon>
        <!-- <romanceTags></romanceTags> --> <!--Already covered by 0% flirt chance.-->
         <aptitudes>
          <Intellectual>-4</Intellectual>
        </aptitudes>
        <disableSkillBelowAptitude>
          <Intellectual>-3</Intellectual>
        </disableSkillBelowAptitude>
        <clampedSkills>
          <li>
            <skill>Artistic</skill>
            <range>0~8</range>
          </li>
          <li>
            <skill>Animals</skill>
            <range>0~12</range>
          </li>
          <li>
            <skill>Social</skill>
            <range>0~12</range>
          </li>
        </clampedSkills>
        <canHavePassions>false</canHavePassions>
      </li>
    </modExtensions>
  </HediffDef>

</Defs>