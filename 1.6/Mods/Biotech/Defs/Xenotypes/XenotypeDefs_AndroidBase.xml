    <iconPath>Icons/BS_AndroidFaction_white</iconPath>
    <combatPowerFactor>0.7</combatPowerFactor>
    <inheritable>true</inheritable>
    <factionlessGenerationWeight>0.5</factionlessGenerationWeight>
    <genes>
      <li>Body_Standard</li>
      <li>BS_TVHead</li>
      <li>BS_SimpleRobotBody</li>
      <li MayRequire="RedMattis.BigSmall.Core">BS_AcidResistanceMid</li>
      <li MayRequire="RedMattis.BigSmall.Core">BS_BatteryChargeable</li>
    </genes>
    <modExtensions>
