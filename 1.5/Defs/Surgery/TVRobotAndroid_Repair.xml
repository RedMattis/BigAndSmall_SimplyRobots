<Defs>
  <RecipeDef ParentName="SurgeryInstallBodyPartNaturalBase">
    <defName>BS_RepairRobotBrain</defName>
    <label>repair android brain</label>
    <description>restore a damaged, replaced, or missing CPU to its original state.</description>
    <descriptionHyperlinks><ThingDef>ComponentSpacer</ThingDef></descriptionHyperlinks>
    <jobString>Restoring brain.</jobString>
    <deathOnFailedSurgeryChance>0</deathOnFailedSurgeryChance>
    <skillRequirements>
      <Medicine>7</Medicine>
      <Crafting>11</Crafting>
    </skillRequirements>
    <researchPrerequisite>
      <li>Bionics</li>
    </researchPrerequisite>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>ComponentSpacer</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>ComponentSpacer</li>
      </thingDefs>
    </fixedIngredientFilter>
    <appliedOnFixedBodyParts>
      <li>BS_ArtificialBrain</li>
    </appliedOnFixedBodyParts>
  </RecipeDef>

